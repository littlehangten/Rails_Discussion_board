<%= form_for @group do |form| %>

<% if @group.errors.any? %>
<ul>
    <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

標題
<%= form.text_field :title %>
<br>
