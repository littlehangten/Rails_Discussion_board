<%= form_for @group do |form| %>

<div class="form-group">
    <div class="form-group string optional">
        <%= form.label "標題", :class => "string optional control-label" %>
        <%= form.text_field :title, :class => "string optional form-control" %>
    </div>

    <div class="form-group string optional">
        <%= form.label "說明", :class => "string optional control-label" %>
        <%= form.text_area :description, :class => "string optional form-control" %>
    </div>

</div>
    <%= form.submit "送出", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
