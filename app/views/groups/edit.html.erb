<div class="col-md-4 col-md-offset-4">
    <h2>编辑討論區</h2>

    <hr>
    <%= form_for @group do |form| %>

    <% if @group.errors.any? %>
    <ul>
        <% @group.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
    <% end %>

    標題
    <%= form.text_field :title %>
    <br>
    敘述
    <br>
    <%= form.text_area :description %>
    <br>

    <%= form.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
